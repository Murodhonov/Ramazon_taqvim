<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/constraintLayout2" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/lottieAnimationView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="300dp"
            android:layout_height="240dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView14"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/textView14"
            motion:layout_constraintEnd_toEndOf="@+id/wednesday"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/wednesday"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/wednesday"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/ramadankarem"
            motion:layout_constraintHeight_percent="1"
            android:layout_marginTop="10dp"
            motion:layout_editor_absoluteX="24dp" />
        <Constraint
            android:id="@+id/constraintLayout3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/constraintLayout3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />
    </ConstraintSet>
</MotionScene>