<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <com.nitish.typewriterview.TypeWriterView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:text="Ramazon taqvimi 2022"
            android:fontFamily="@font/font1"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <com.nitish.typewriterview.TypeWriterView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/name_author"
            android:fontFamily="@font/font2"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <com.nitish.typewriterview.TypeWriterView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="Assalomu alaykum qadrli foydalanuvchi  Ushbu ilova yordamida Ramazon ro`zasining kunlari saharlik va iftorlik vaqtlarini kuzatib borish imkoniyati mavjud.\n\n Ushbu ilova dasturchini g'oyasi va mualliflik huquqiga ega hisoblanadi !\n\n\n
        @Murodhonov siz aziz muhlislarga yangidan yangi ilovalarni taqdim etishda davom etadi !"
            android:paddingTop="10dp"
            android:fontFamily="@font/font1"
            android:textColor="#ECECEC"
            android:textSize="16dp"/>

    </LinearLayout>

</ScrollView>